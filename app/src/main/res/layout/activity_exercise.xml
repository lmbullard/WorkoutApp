<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="518dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/menuimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/menu" />

        <TextView
            android:id="@+id/titletextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="Exercises"
            android:textAlignment="center"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/settingsimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/settings" />
    </LinearLayout>

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/upperButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Upper Body"
                android:textSize="24dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/abButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Abdominals"
                android:textSize="24dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:id="@+id/lowerButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Lower Body"
                android:textSize="24dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/cardioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cardio"
                android:textSize="24dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>